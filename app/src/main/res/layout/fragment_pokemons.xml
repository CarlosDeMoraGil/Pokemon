<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/pokemon_1"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/movies_img_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/pokemon_1_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="40dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/pokemon_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/pokemon_2"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/movies_img_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/pokemon_2_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="40dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/pokemon_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/pokemon_3"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/movies_img_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/pokemon_3_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="40dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/pokemon_3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/pokemon_4"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/movies_img_4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/pokemon_4_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="40dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/pokemon_4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="40dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
